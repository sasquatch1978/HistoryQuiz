<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="@dimen/cardWidth"
        android:layout_height="@dimen/cardHeight"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/layoutMargin"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Question 2 of 10:"
                android:textColor="@color/questionNumColor"
                android:textSize="@dimen/questionText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/textTopMargin"
                android:text="The first Olympic Games in 776 BC, were held in what Greek city?"
                android:textColor="@color/questionColor"
                android:textSize="@dimen/questionText" />

            <RadioGroup
                android:id="@+id/q2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/q2a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/answerMargin"
                    android:text="A)  Athens"
                    android:textColor="@color/answerColor"
                    android:textSize="@dimen/answerText" />

                <RadioButton
                    android:id="@+id/q2b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B)  Corinth"
                    android:textColor="@color/answerColor"
                    android:textSize="@dimen/answerText" />

                <RadioButton
                    android:id="@+id/q2c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C)  Olympia"
                    android:textColor="@color/answerColor"
                    android:textSize="@dimen/answerText" />

                <RadioButton
                    android:id="@+id/q2d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D)  Thebes"
                    android:textColor="@color/answerColor"
                    android:textSize="@dimen/answerText" />

            </RadioGroup>
        </LinearLayout>

        <Button
            android:id="@+id/submitQ2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="setQ2"
            android:layout_marginBottom="@dimen/buttonMargin"
            android:layout_gravity="bottom|center"
            android:background="@drawable/buttonshape"
            android:textSize="@dimen/questionText"
            android:textColor="@color/buttonColor"
            android:text="Submit"/>

    </android.support.v7.widget.CardView>
</LinearLayout>