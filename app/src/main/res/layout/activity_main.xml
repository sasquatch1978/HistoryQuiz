<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layoutColor"
    android:fillViewport="true"
    tools:context="com.example.android.historyquiz.MainActivity">

    <LinearLayout
        android:id="@+id/welcomeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layoutMargin"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/cardHeight"
            android:layout_height="@dimen/imageHeight"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/answerBottom"
            android:src="@drawable/world" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/entryTopMargin"
            android:layout_marginLeft="@dimen/nameMargin"
            android:layout_marginRight="@dimen/nameMargin"
            android:hint="@string/hint"
            android:inputType="textPersonName|textCapWords"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/titleBottom"

            android:text="@string/welcome"
            android:textAlignment="center"
            android:textColor="@color/questionNumColor"
            android:textSize="@dimen/titleText" />

        <Button
            android:id="@+id/begin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/buttonshape"
            android:onClick="begin"
            android:text="@string/beginButton"
            android:textColor="@color/buttonColor"
            android:textSize="@dimen/questionText" />

    </LinearLayout>
</ScrollView>