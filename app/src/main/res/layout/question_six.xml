<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="@dimen/cardWidth"
        android:layout_height="@dimen/cardHeight"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/layoutMargin"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Question 6 of 10:"
                android:textColor="@color/questionNumColor"
                android:textSize="@dimen/questionText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/textTopMargin"
                android:text="Which two were invented in China?"
                android:textColor="@color/questionColor"
                android:textSize="@dimen/questionText" />

            <CheckBox
                android:id="@+id/q6a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/answerMargin"
                android:text="A)  Compass"
                android:textColor="@color/answerColor"
                android:textSize="@dimen/answerText" />

            <CheckBox
                android:id="@+id/q6b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B)  Eyeglasses"
                android:textColor="@color/answerColor"
                android:textSize="@dimen/answerText" />

            <CheckBox
                android:id="@+id/q6c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C)  Windmill"
                android:textColor="@color/answerColor"
                android:textSize="@dimen/answerText" />

            <CheckBox
                android:id="@+id/q6d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D)  Gunpowder"
                android:textColor="@color/answerColor"
                android:textSize="@dimen/answerText" />

        </LinearLayout>

        <Button
            android:id="@+id/submitQ6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="setQ6"
            android:layout_marginBottom="@dimen/buttonMargin"
            android:layout_gravity="bottom|center"
            android:background="@drawable/buttonshape"
            android:textSize="@dimen/questionText"
            android:textColor="@color/buttonColor"
            android:text="Submit"/>

    </android.support.v7.widget.CardView>
</LinearLayout>