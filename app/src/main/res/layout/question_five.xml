<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    style="@style/QuestionLayout">

    <android.support.v7.widget.CardView
        style="@style/QuestionCard"
        card_view:cardCornerRadius="@dimen/cardRadius">

        <LinearLayout style="@style/CardLayout">

            <TextView
                style="@style/QuestionTitle"
                android:text="@string/questionTitle5" />

            <TextView
                style="@style/Question"
                android:text="@string/question5" />

            <RadioGroup
                android:id="@+id/q5"
                style="@style/RadioGroup">

                <RadioButton
                    android:id="@+id/q5a"
                    style="@style/AnswerTop"
                    android:text="@string/answer5a" />

                <RadioButton
                    android:id="@+id/q5b"
                    style="@style/Answer"
                    android:text="@string/answer5b" />

                <RadioButton
                    android:id="@+id/q5c"
                    style="@style/Answer"
                    android:text="@string/answer5c" />

                <RadioButton
                    android:id="@+id/q5d"
                    style="@style/Answer"
                    android:text="@string/answer5d" />

            </RadioGroup>
        </LinearLayout>

        <Button
            android:id="@+id/submitQ5"
            style="@style/SubmitButton"
            android:onClick="setQ5"
            android:text="@string/submitButton" />

    </android.support.v7.widget.CardView>
</LinearLayout>