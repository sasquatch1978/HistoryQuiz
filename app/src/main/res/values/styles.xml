<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Image">
        <item name="android:layout_width">@dimen/cardHeight</item>
        <item name="android:layout_height">@dimen/imageHeight</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/imageBottom</item>
    </style>

    <style name="QuestionCard">
        <item name="android:layout_width">@dimen/cardWidth</item>
        <item name="android:layout_height">@dimen/cardHeight</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="QuestionLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="CardLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/layoutMargin</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="QuestionTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/questionNumColor</item>
        <item name="android:textSize">@dimen/questionText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Question">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/textTopMargin</item>
        <item name="android:textColor">@color/questionColor</item>
        <item name="android:textSize">@dimen/questionText</item>
    </style>

    <style name="RadioGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AnswerTop">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/answerMargin</item>
        <item name="android:textColor">@color/answerColor</item>
        <item name="android:textSize">@dimen/questionText</item>
    </style>

    <style name="Answer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/answerColor</item>
        <item name="android:textSize">@dimen/questionText</item>
    </style>

    <style name="SubmitButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|center</item>
        <item name="android:layout_marginBottom">@dimen/buttonMargin</item>
        <item name="android:background">@drawable/buttonshape</item>
        <item name="android:textColor">@color/buttonColor</item>
        <item name="android:textSize">@dimen/questionText</item>
    </style>

</resources>
